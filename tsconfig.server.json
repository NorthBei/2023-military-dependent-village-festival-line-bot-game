{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "paths": {
      "@/common/*": ["./common/*"],
    }
  },
  "include": ["server/**/*", "common/**/*"],
  "exclude": ["node_modules", "functions"]
}